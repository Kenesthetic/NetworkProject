from tkinter import *
import tkinter as tk



class Application(tk.Frame):
    def __init__(self, master=None):
        tk.Frame.__init__(self, master,)
        self.master = master
        self.init_window()
        self.createWidgets()

    def init_window(self):
        self.master.title("GUI")
        self.pack(fill=BOTH, expand=1)
        menu = Menu(self.master)
        self.master.config(menu=menu)

        file = Menu(menu)
        file.add_command(label='Exit', command=self.quit)
        menu.add_cascade(label='File', menu=file)

        edit = Menu(menu)
        edit.add_command(label='Show Text', command=self.showTxt)
        menu.add_cascade(label='Edit', menu=edit)



    def showTxt(self):
        text = Label(self, text='Hey, This is a test to see if the drop down menu is working')
        text.place(x=250,y=200)


    def createWidgets(self):
        #Top Label Identifier
        self.topInput = tk.Label(self, text="Welcome to the App",)
        self.topInput.grid(row=0, column=2)

        #Instructional Label
        self.instruct = tk.Label(self, text="Please enter the IP address to Query")
        self.instruct.grid(row=1, column=2)
        self.instruct.columnconfigure(1, weight=2)
        self.instruct.rowconfigure(2, weight=2)

        #Text Entry
        self.enter =tk.Entry(self,)
        self.enter.grid(row=2, column=2)

        #Text Reply to User
        self.reply = tk.Label(self, text="Information will be returned here",  )
        self.reply.grid(row=3, column=2)


        #quit button to exit the application
        self.quitButton = tk.Button(self, text="Quit", command=self.quit)
        self.quitButton.grid(row=9, column=2)
        self.quitButton.anchor=tk.BOTTOM

root = Tk()
root.geometry("700x700")


app = Application(root)

root.mainloop()
